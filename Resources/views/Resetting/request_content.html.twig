<div class="main-login col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

    <div class="logo">
        FOS-UserBundle
    </div>
    <div class="login">
        <h3>Forget Password?</h3>
        <p> Enter your e-mail address below to reset your password. </p>
        <hr>
        <div class="form-login">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div>
                {% if invalid_username is defined %}
                <div class="alert alert-danger">
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                </div>
                {% endif %}
                <div class="form-group">
                <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="username" required="required" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-login pull-right" />
            </div>
        </form>
            <button class="btn" onclick="window.location.href='{{ path('fos_user_security_login') }}'">back</button>

        </div>
</div>
</div>
