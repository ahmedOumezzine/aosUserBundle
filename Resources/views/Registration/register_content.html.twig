
<div class="main-login col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <div class="logo">
        AOS-UserBundle
    </div>
    <div class="login">
        <h3>Sign Up</h3>
        <p> Enter your personal details below: </p>
<form action="{{ path('aos_user_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_widget(form) }}
        <div class="form-group">
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-login pull-right" />
        </div>
</form>
        <button class="btn" onclick="window.location.href='{{ path('fos_user_security_login') }}'">back</button>

        <hr>
        {% if(visible) %}
        <div class="form-group">
            <center>
                {% if(facebook) %}
                <button class="btn btn-facebook" onclick="window.location.href='{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}'">
                    registration with Facebook
                </button>
                {% endif %}
                {% if(github) %}
                <button class="btn btn-github"  onclick="window.location.href='{{ path('hwi_oauth_service_redirect', {'service': 'github' }) }}'">
                    registration with Github
                </button>
                {% endif %}
            </center>
        </div>
        {% endif %}
</div>
</div>